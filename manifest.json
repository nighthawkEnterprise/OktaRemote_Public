{
    "manifest_version": 3,
    "name": "Okta Remote",
    "version": "2.0.2",
    "description": "Okta Remote for Your Tenant",
    "action": {
        "default_popup": "index.html",
        "default_icon": "Okta_Remote1.png"
    },
    "icons": {
        "16": "Okta_Remote1.png",
        "32": "Okta_Remote1.png",
        "128": "Okta_Remote1.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"run_at": "document_end",
			"js": ["background.js"],
			"all_frames": true
		}
	]
}
